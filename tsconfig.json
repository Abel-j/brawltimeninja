{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "strict": true,
  },
  "exclude": [
    "node_modules"
  ]
}
