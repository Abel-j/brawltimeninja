{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2021",
    "lib": ["es2021"],
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false, // https://github.com/Vincit/objection.js/issues/2178
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
